<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AcessoAdministrativo</filter-name>
        <filter-class>autorizacaoAcesso.AcessoAdministrativo</filter-class>
    </filter>
    <filter>
        <filter-name>AcessoLogado</filter-name>
        <filter-class>autorizacaoAcesso.AcessoLogado</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoAdministrativo</filter-name>
        <url-pattern>/new</url-pattern>
        <url-pattern>/list</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AcessoLogado</filter-name>
        <url-pattern>/principal.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AcessoController</servlet-name>
        <servlet-class>controller.AcessoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>controller.Upload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcessoController</servlet-name>
        <url-pattern>/AcessoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
